<div id="elements">
  <div>
    <select id="geometry">
      <option value="torusKnot">Torus Knot</option>
      <option value="box">Box</option>
      <option value="circle">Circle</option>
      <option value="cone">Cone</option>
      <option value="cylinder">Cylinder</option>
      <option value="dodecahedron">Dodecahedron</option>
      <option value="octahedron">Octahedron</option>
      <option value="plane">Plane</option>
      <option value="ring">Ring</option>
      <option value="sphere">Sphere</option>
      <option value="tetrahedron">Tetrahedron</option>
      <option value="torus">Torus</option>
    </select>

    <select id="color">
      <option value="blue">Blue</option>
      <!-- <option value="blue">Green</option>
      <option value="red">Yellow</option>
      <option value="red">Orange</option>
       -->
    </select>

    <select id="x">
      <option value="0">X: 0</option>
      <option value="2">X: 2</option>
      <option value="-2">X: -2</option>
    </select>

    <select id="y">
      <option value="0">Y: 0</option>
      <option value="2">Y: 2</option>
      <option value="-2">Y: -2</option>
    </select>

    <select id="z">
      <option value="-5">Z: -5</option>
      <option value="5">Z: 5</option>
    </select>
  </div>
  <div>
    <button id="create">create</button>
    <button id="delete">delete all</button>
  </div>
</div>

<a-scene id="scene">

  <!-- cursor -->
  <a-entity camera look-controls wasd-controls>
    <a-entity position="0 0 -3"
            geometry="primitive: ring; radiusOuter: 0.30;
                      radiusInner: 0.20;"
            material="color: cyan; shader: flat"
            cursor="maxDistance: 30; fuse: true">
    <a-animation begin="click" easing="ease-in" attribute="scale"
         fill="backwards" from="0.1 0.1 0.1" to="1 1 1" dur="150"></a-animation>
    <a-animation begin="fusing" easing="ease-in" attribute="scale"
         fill="forwards" from="1 1 1" to="0.1 0.1 0.1" dur="1500"></a-animation>
    </a-entity>
  </a-entity>

  <!--  entity -->
  {{#each entities}}
  <a-entity
    cursor-listener
    id="{{this.id}}"
    geometry="primitive: {{this.geometry}}; width: 4; height: 4"
    material="color: {{this.color}}"
    position="{{this.x}} {{this.y}} {{this.z}}"
    text="value: {{this.text}}">

    <!-- <a-animation begin="click" attribute="rotation"
               dur="8000"
               fill="forwards"
               to="360 360 360"
               repeat="indefinite"></a-animation> -->
  </a-entity>
  {{/each}}

</a-scene>
